<div class="container">
	<div class="row">
		<!-- section title -->
		<div class="col-12">
			<h2 class="section__title">Expected premiere</h2>
		</div>
		<!-- end section title -->

		<!-- card -->
		@foreach (var movie in @Model.ExpectedPremiereMovies)
		{
			<div class="col-6 col-sm-4 col-lg-3 col-xl-2">
				<div class="card">
					<div class="card__cover">
						<img src="/image/@movie.Id/@(movie.Image).jpg" alt="">
						<a href="#" class="card__play">
							<i class="icon ion-ios-play"></i>
						</a>
					</div>
					<div class="card__content">
						<h3 class="card__title"><a href="/watch/@movie.Link">@movie.Title</a></h3>
						<span class="card__category">
    						@foreach(var category in movie.Categories)
    						{
    							<a href="/categories/@category.Link">@category.Name</a>
    						}
						</span>
						<span class="card__rate"><i class="icon ion-ios-star"></i>@movie.Rating</span>
					</div>
				</div>
			</div>	
		}
		<!-- end card -->
	</div>
</div>